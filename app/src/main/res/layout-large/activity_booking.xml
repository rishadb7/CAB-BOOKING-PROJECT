<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.rishad.democab.BookingActivity">


    <ImageView
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/vehicleImage"
        android:layout_width="360dp"
        android:layout_height="211dp"

        android:layout_marginTop="28dp" />

    <TextView
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/vehicleName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TOYOTA INNOVA A/C"
        android:textSize="25dp"
        android:layout_marginTop="270dp" />

    <ImageView
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/imageView4"
        android:layout_width="27dp"
        android:layout_height="22dp"
        app:srcCompat="@drawable/rupeesymbol"
        android:layout_marginTop="332dp"
        app:layout_constraintHorizontal_bias="0.226" />

    <TextView
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/charge"
        android:layout_width="82dp"
        android:layout_height="24dp"
        android:text="1200"
        android:textSize="20dp"
        android:layout_marginTop="332dp"
        android:layout_marginLeft="84dp"
        app:layout_constraintHorizontal_bias="0.2"
        android:layout_marginStart="84dp" />

    <TextView
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/minCharge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="minimum charge"
        android:layout_marginTop="337dp"
        app:layout_constraintHorizontal_bias="0.54" />

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="42dp"
        android:layout_height="41dp"
        android:layout_marginTop="409dp"

        android:background="@drawable/btn"
        app:layout_constraintHorizontal_bias="0.48"
        app:layout_constraintLeft_toLeftOf="parent"

        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/imageButton3"
        android:layout_width="42dp"
        android:layout_height="41dp"
        android:layout_marginTop="409dp"

        android:background="@drawable/minusbtn3"
        app:layout_constraintHorizontal_bias="0.231"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/hour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="15dp"
        android:layout_marginTop="416dp"
        app:layout_constraintHorizontal_bias="0.355" />

    <TextView
        android:id="@+id/description"
        android:layout_width="420dp"
        android:layout_height="135dp"
        android:layout_marginTop="542dp"
        android:text="Vehicle charge discription"
        android:textSize="12dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/bookNow2"
        android:layout_width="496dp"
        android:layout_height="69dp"
        android:layout_marginTop="792dp"
        android:background="@drawable/boonow"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</android.support.constraint.ConstraintLayout>