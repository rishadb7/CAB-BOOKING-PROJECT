<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.rishad.democab.PaymentActivity"
    tools:layout_editor_absoluteX="0dp"
    android:layout_marginTop="0dp"
    app:layout_constraintTop_toBottomOf="@+id/view">



    <android.support.v7.widget.CardView

        android:layout_width="279dp"
        android:layout_height="255dp"
        android:layout_marginTop="100dp"
        app:cardCornerRadius="10dp"
        app:cardUseCompatPadding="true"
        app:cardElevation="4dp"

        app:layout_constraintHorizontal_bias="0.514"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:hardwareAccelerated="true"
        >


        <android.support.constraint.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Payments"
                android:textColor="@color/textColor"
                android:textSize="16sp"
                app:layout_constraintHorizontal_bias="0.074"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <View
                android:id="@+id/view"
                android:layout_width="360dp"
                android:layout_height="1dp"
                android:layout_marginTop="41dp"
                android:background="@color/divider"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginRight="8dp"
                android:layout_marginEnd="8dp" />


            <RadioGroup
                android:layout_width="222dp"
                android:layout_height="166dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="69dp"
                app:layout_constraintHorizontal_bias="0.491">

                <RadioButton
                    android:id="@+id/credit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layoutDirection="rtl"
                    android:text="Credit/Debit/NetBanking"
                    android:textAlignment="textStart"
                    android:buttonTint="@color/radioround"
                    android:textSize="14sp" />

                <RadioButton
                    android:id="@+id/cashOnDelivery"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layoutDirection="rtl"
                    android:text="Cash In Ride"
                    android:buttonTint="@color/radioround"
                    android:textAlignment="textStart"
                    android:textSize="14sp" />


            </RadioGroup>


        </android.support.constraint.ConstraintLayout>


    </android.support.v7.widget.CardView>

    <Button
        android:id="@+id/confirmRide"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_marginTop="425dp"
        android:background="@drawable/confirmride"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</android.support.constraint.ConstraintLayout>
