<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.rishad.democab.BookingActivity">


    <ImageView
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/vehicleImage"
        android:layout_width="256dp"
        android:layout_height="162dp"

        android:layout_marginTop="6dp"
        app:layout_constraintHorizontal_bias="0.414" />

    <TextView
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/vehicleName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TOYOTA INNOVA A/C"
        android:textSize="25dp"
        android:layout_marginTop="178dp"
        app:layout_constraintHorizontal_bias="0.464" />

    <ImageView
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/imageView4"
        android:layout_width="27dp"
        android:layout_height="22dp"
        app:srcCompat="@drawable/rupeesymbol"
        android:layout_marginTop="222dp"
        app:layout_constraintHorizontal_bias="0.159" />

    <TextView
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/charge"
        android:layout_width="82dp"
        android:layout_height="24dp"
        android:text="1200"
        android:textSize="20dp"
        android:layout_marginTop="222dp"
        android:layout_marginLeft="84dp"
        app:layout_constraintHorizontal_bias="0.0" />

    <TextView
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/minCharge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="minimum charge"
        android:layout_marginTop="227dp"
        app:layout_constraintHorizontal_bias="0.658" />

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="42dp"
        android:layout_height="41dp"
        android:layout_marginTop="258dp"

        android:background="@drawable/btn"
        app:layout_constraintHorizontal_bias="0.461"
        app:layout_constraintLeft_toLeftOf="parent"

        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/imageButton3"
        android:layout_width="42dp"
        android:layout_height="41dp"
        android:layout_marginTop="259dp"

        android:background="@drawable/minusbtn3"
        app:layout_constraintHorizontal_bias="0.154"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/hour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="15dp"
        android:layout_marginTop="272dp"
        app:layout_constraintHorizontal_bias="0.312" />

    <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="316dp"
        android:text="Vehicle charge discription"
        android:textSize="12dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/bookNow2"
        android:layout_width="298dp"
        android:layout_height="68dp"
        android:layout_marginTop="418dp"
        android:background="@drawable/boonow"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</android.support.constraint.ConstraintLayout>
